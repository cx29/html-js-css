.bigBox {
  z-index: 1;
  width: 100%;
  height: auto;
  position: relative;
}
.bigBox .list {
  width: 90%;
  height: 100rpx;
  padding: 0 5%;
  display: flex;
  margin: 10px 0;
  background-color: #fff;
  align-items: center;
}
.bigBox .list .btn {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  border: 0;
}
.bigBox .list .btn .rightBox {
  width: 50%;
  display: flex;
  justify-content: flex-end;
  color: #9d9d9d;
  height: 100%;
  align-items: center;
}
.bigBox .list .btn .rightBox view {
  width: 180rpx;
  font-size: 24rpx;
  margin-right: 20px;
}
.bigBox .list .btn .rightBox .ico {
  -webkit-transform-origin: 50%;
          transform-origin: 50%;
  -webkit-transform: rotate(-90deg);
          transform: rotate(-90deg);
  font-size: 20rpx;
}
.bigBox .list .btn .leftBox {
  display: flex;
  align-items: center;
  width: 50%;
}
.bigBox .list .btn .leftBox image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 20px;
}
.bigBox .list .btn .leftBox text {
  font-size: 24rpx;
  font-weight: 600;
}
.modifyPic,
.modifyName {
  z-index: 2;
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
}
.modifyPic .meng,
.modifyName .meng {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 3;
}
.modifyPic .btnBox,
.modifyName .btnBox {
  width: 100%;
  height: auto;
  position: absolute;
  bottom: 34rpx;
  z-index: 4;
}
.modifyPic .btnBox .btn,
.modifyName .btnBox .btn {
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
}
.modifyName {
  display: flex;
  justify-content: center;
  align-items: center;
}
.modifyName .inputBox {
  width: 60%;
  height: 200rpx;
  background-color: #fff;
  font-size: 28rpx;
  padding: 40rpx;
  z-index: 4;
  border-radius: 20px;
}
.modifyName .inputBox input {
  margin: 10rpx 0;
  border: 1px solid #acacac;
}
.modifyName .inputBox .btnBox2 {
  width: 100%;
  height: 100rpx;
  display: flex;
  margin-top: 40rpx;
}
.modifyName .inputBox .btnBox2 .btnNo,
.modifyName .inputBox .btnBox2 .btnYes {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #8F8F94;
  font-size: 32rpx;
}
.modifyName .inputBox .btnBox2 .btnNo {
  border: 0;
  border-right: 1px solid #8F8F94;
  color: red;
}

