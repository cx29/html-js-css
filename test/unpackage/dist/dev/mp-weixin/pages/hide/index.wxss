.bigBox {
  width: 100%;
  height: auto;
}
.bigBox .listBox {
  width: 90%;
  padding: 0 5%;
  height: 80rpx;
  margin: 10px 0;
  background-color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
}
.bigBox .listBox .switchbox {
  width: 90rpx;
  height: 45rpx;
  background-color: #e8e8e8;
  border-radius: 20px;
  border: 1px solid #8F8F94;
  position: absolute;
  right: 6%;
}
.bigBox .listBox .switchbox .round,
.bigBox .listBox .switchbox .select {
  width: 45rpx;
  height: 45rpx;
  background-color: #ffffff;
  border-radius: 50%;
  position: absolute;
  left: 0%;
}
.bigBox .listBox .switchbox .select {
  left: 50%;
  background-image: linear-gradient(to right top, #d599b6, #a7a1d0);
}

