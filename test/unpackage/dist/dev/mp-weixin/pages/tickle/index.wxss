.bigBox {
  width: 100%;
  height: auto;
  margin: 0 auto;
}
.bigBox .tagBox,
.bigBox .picBox,
.bigBox .contactBox {
  width: 100%;
  font-size: 24rpx;
  background-color: #ffffff;
  padding: 0 5%;
  margin: 10px 0;
  line-height: 80rpx;
}
.bigBox .tagBox {
  height: 80rpx;
  font-weight: 600;
}
.bigBox .inputBox {
  width: 90%;
  font-size: 26rpx;
  background-color: #ffffff;
  height: 100px;
  padding: 5% 5%;
  position: relative;
}
.bigBox .inputBox textarea {
  width: 100%;
  height: 100%;
}
.bigBox .inputBox .numTip {
  position: absolute;
  bottom: 5%;
  right: 5%;
  color: #b2b2b2;
}
.bigBox .picBox {
  height: auto;
}
.bigBox .picBox .p-text {
  width: 90%;
  height: auto;
}
.bigBox .picBox .imgBox {
  width: auto;
  height: auto;
}
.bigBox .picBox .imgBox image {
  width: 140rpx;
  height: 140rpx;
  margin: 0 16rpx;
}
.bigBox .contactBox {
  display: flex;
  align-items: center;
}
.bigBox .contactBox input {
  width: 200px;
  margin-left: 5px;
}
.bigBox .tips {
  width: 70%;
  margin: 0 auto;
  font-size: 25rpx;
  font-weight: 600;
}
.bigBox button {
  width: 200rpx;
  height: 80rpx;
  font-size: 28rpx;
  font-weight: 600;
  background-image: linear-gradient(to right, #f0f0f0, #e8a0b8, #aba9da);
  margin-top: 200rpx;
}

